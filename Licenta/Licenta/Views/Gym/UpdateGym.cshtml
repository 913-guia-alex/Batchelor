@model Licenta.Models.Gym
@{
    ViewBag.Title = "Update Gym";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>Update Gym</title>
    <style>
        input {
            width: 190px;
            font-size: 16px;
            height: 28px;
            padding: 2px;
            margin: 3px;
            border: solid;
            border-color: indigo;
            border-radius: 4px;
            border-width: 2px;
            margin-left: 72px;
        }

        form {
            padding: 2px;
        }

        button {
            width: 140px;
            height: 38px;
            color: white;
            background-color: forestgreen;
            border-radius: 6px;
            margin: 5px;
        }

        .buttons {
            margin-top: 25px;
        }
    </style>
</head>
<body>
    <h3>Update Gym</h3>

    <form id="updateForm" action="@Url.Action("UpdateGym", "Gym")" method="post">
        @Html.HiddenFor(model => model.idg)
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="@Model.name" />
        </div>
        <div>
            <label for="adress">Address:</label>
            <input type="text" id="adress" name="adress" value="@Model.adress" />
        </div>
        <div>
            <label for="openHour">Open Hour:</label>
            <input type="text" id="openHour" name="openHour" value="@Model.openHour" />
        </div>
        <div>
            <label for="closeHour">Close Hour:</label>
            <input type="text" id="closeHour" name="closeHour" value="@Model.closeHour" />
        </div>
        <div>
            <label for="rating">Rating:</label>
            <input type="text" id="rating" name="rating" value="@Model.rating" />
        </div>
        <div class="buttons">
            <button type="submit" value="Update">Update</button>
            <button type="button" onclick="cancelUpdate()">Cancel</button>
        </div>
    </form>

    <script>
        function cancelUpdate() {
            window.location.href = '/Gym/Gyms';
        }
    </script>

</body>
</html>
