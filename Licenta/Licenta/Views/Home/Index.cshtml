@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome to Your App</title>
    <style type="text/css">
        body {
            font-family: 'Arial, sans-serif';
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden; /* Hide overflow to prevent scroll bars */
        }

        body > * {
            margin: 0;
        }

        .container {
            text-align: center;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.5s ease;
        }

        h1 {
            font-size: 3em;
            font-weight: bold;
            color: #000000; /* Black color */
            letter-spacing: 4px;
            margin-bottom: 20px;
            transition: color 0.5s ease, letter-spacing 0.5s ease;
        }

        h2 {
            color: #000000; /* Black color */
            transition: color 0.5s ease;
        }

        p {
            color: #666666;
            margin-bottom: 20px;
            transition: color 0.5s ease;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .action-button {
            margin: 0 10px;
            padding: 10px 20px;
            font-size: 16px;
            text-decoration: none;
            color: #000000; /* Black color */
            background: linear-gradient(to right, #007BFF, #0056b3);
            border-radius: 5px;
            transition: transform 0.3s ease, color 0.3s ease;
            cursor: pointer;
            animation: gradientAnimation 5s infinite linear; /* Continuous gradient animation */
        }



        .action-button:hover {
            transform: scale(1.05);
            color: #ffffff; /* White color on hover */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>TopGym</h1>
        <h2>Welcome to Your App!</h2>
        <p>Please log in or sign up to start using the app.</p>
        <div class="action-buttons">
            @Html.ActionLink("Log In", "Login", "Authenticate", new { }, new { @class = "action-button" })
            @Html.ActionLink("Sign Up", "Register", "Register", new { }, new { @class = "action-button" })
        </div>
    </div>
</body>
</html>
