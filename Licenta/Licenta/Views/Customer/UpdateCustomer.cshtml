@model Licenta.Models.Customer
@{
    ViewBag.Title = "Update Customer";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>Update Customer</title>
    <style>
        input {
            width: 190px;
            font-size: 16px;
            height: 28px;
            padding: 2px;
            margin: 3px;
            border: solid;
            border-color: indigo;
            border-radius: 4px;
            border-width: 2px;
            margin-left: 72px;
        }

        form {
            padding: 2px;
        }

        button {
            width: 140px;
            height: 38px;
            color: white;
            background-color: forestgreen;
            border-radius: 6px;
            margin: 5px;
        }

        .buttons {
            margin-top: 25px;
        }
    </style>
</head>
<body>
    <h3>Update Customer</h3>

    <form id="updateForm" action="@Url.Action("UpdateCustomer", "Customer")" method="post">
        @Html.HiddenFor(model => model.idc)
        <div>
            <label for="surname">Surname:</label>
            <input type="text" id="surname" name="surname" value="@Model.surname" />
        </div>
        <div>
            <label for="lastname">Lastname:</label>
            <input type="text" id="lastname" name="lastname" value="@Model.lastname" />
        </div>
        <div>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="@Model.age" />
        </div>
        <div>
            <label for="gender">Gender:</label>
            <input type="text" id="gender" name="gander" value="@Model.gender" />
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" value="@Model.email" />
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="text" id="password" name="password" value="@Model.password" />
        </div>
        <div class="buttons">
            <button type="submit" value="Update">Update</button>
            <button type="button" onclick="cancelUpdate()">Cancel</button>
        </div>
    </form>

    <script>
        function cancelUpdate() {
            window.location.href = '/Customer/Customers';
        }
    </script>

</body>
</html>
