
@model List<Licenta.Models.Reservation>


@{
    ViewBag.Title = "Reservations";
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />


<style>
    .btn-transition {
        transition: background-color 0.3s ease;
    }

        .btn-transition:hover {
            background-color: forestgreen;
            color: white;
        }

    .search-container {
        margin-bottom: 10px;
        display: flex;
        justify-content: flex-end;
    }

        .search-container input {
            width: 200px; 
            margin-left: 10px;
        }








    .dropdown {
        height: fit-content;
        width: 100px;
        position: absolute;
        display: flex;
        top: 115px; 
        left: 215px;
        z-index: 1000; 
    }

    .dropdown-toggle {
        color: #333;
        padding: .75rem 2.5rem;
        border: none;
        border-radius: .5rem;
        cursor: pointer;
        width: 150px;
        display: flex;
        align-items: center; 
        justify-content: space-between; 
    }

        .dropdown-toggle span {
            display: flex;
            align-items: center;
        }

        .dropdown-toggle i {
            margin: 0.3rem; 
        }

    .dropdown-menu {
        position: absolute;
        top: 100%;
        left: 0; 
        border: 1px solid #ccc;
        border-radius: 1rem;
        padding: 0;
        list-style: none;
        display: none;
    }

        .dropdown-menu .menu-item:first-child {
            border-radius: 1rem 1rem 0 0;
        }

        .dropdown-menu .menu-item:last-child {
            border-radius: 0 0 1rem 1rem;
        }

    .menu-items {
        width: 170px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        border-radius: 13px !important;
    }



    .modal-container {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .modal-content {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        padding: 20px;
        text-align: center;
    }

    .button-container {
        display: flex;
        justify-content: space-around;
    }

    .button {
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
    }
        .button:hover {
            transform: scale(1.05); 
            transition: transform 0.3s ease;
        }


    .cancel-button {
        background-color: #ccc;
        color: #535353;
    }

        .cancel-button:hover {
            background-color: #bbb; 
        }

    .delete-button {
        background-color: #e74c3c;
        color: #fff;
    }

        .delete-button:hover {
            background-color: #c0392b; 
        }
</style>
<div class="container">

    <h2 style="text-align: center;">Admin Panel - Reservations</h2>

    <div class="dropdown">
        <div class="dropdown-toggle" onclick="toggleDropdown()">
            <span>
                <i class="fas fa-sort"></i> 
                Sort
            </span>
        </div>
        <ul class="dropdown-menu" id="dropdownMenu">
            <li class="menu-items" onclick="handleButtonClick('sortByType')">
                <i class="fas fa-sort-alpha-down"></i> 
                SortByType
            </li>
            <li class="menu-items" onclick="handleButtonClick('sortByDifficulty')">
                <i class="fas fa-sort-numeric-down"></i>
                SortByDifficulty
            </li>
        </ul>
    </div>

    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search..." class="form-control">
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Customer Email</th>
                <th>Class Name</th>
                <th>Date</th>
                <th>Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.idr</td>
                    <td>@reservation.CustomerEmail</td>
                    <td>@reservation.ClassName</td>
                    <td>@reservation.Date.ToShortDateString()</td>
                    <td>@reservation.Time.ToString(@"hh\:mm")</td>
                    <td>
                        <button class="btn btn-danger" onclick="showDeleteConfirmation(@reservation.idr)">Delete</button>
                        <a href="@Url.Action("UpdateReservationView", "Reservation", new { id = reservation.idr })" class="btn btn-primary">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-md-6">
        <a href="/Reservation/AddReservation" class="btn btn-secondary btn-transition">Add a new reservation</a>
    </div>
    <div class="col-md-6 text-md-right">
        <a href="/Admin/Admins" class="btn btn-secondary btn-transition">Go Back</a>
    </div>
</div>
</div>

<div id="deleteModal" class="modal-container">
    <div class="modal-content">
        <h2>Delete Confirmation</h2>
        <p class="confirmation-message">
            Are you sure you want to delete this item?
        </p>
        <div class="button-container">
            <button id="cancelDeleteBtn" class="button cancel-button">
                Cancel
            </button>
            <button id="confirmDeleteBtn" class="button delete-button">
                Delete
            </button>
        </div>
    </div>
</div>

<script>
    function sortByClassName() {
        var rows = $("table tbody tr").get();

        rows.sort(function (rowA, rowB) {
            var nameA = $(rowA).find("td:eq(1)").text().toUpperCase(); 
            var nameB = $(rowB).find("td:eq(1)").text().toUpperCase(); 

            return nameA.localeCompare(nameB); 
        });

        $.each(rows, function (index, row) {
            $("table tbody").append(row);
        });
    }

    function sortByCustomerEmail() {
        var rows = $("table tbody tr").get();

        rows.sort(function (rowA, rowB) {
            var emailA = $(rowA).find("td:eq(2)").text().toUpperCase(); 
            var emailB = $(rowB).find("td:eq(2)").text().toUpperCase(); 

            return emailA.localeCompare(emailB); 
        });

        $.each(rows, function (index, row) {
            $("table tbody").append(row);
        });
    }


    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("table tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    function showDeleteConfirmation(reservationId) {
        const modal = document.getElementById('deleteModal');
        modal.style.display = 'flex';
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        confirmDeleteBtn.onclick = function () {
            deleteReservation(reservationId);
            hideModal('deleteModal');
        }
        const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
        cancelDeleteBtn.onclick = function () {
            hideModal('deleteModal');
        }
    }

    function hideModal(modalId) {
        const modal = document.getElementById(modalId);
        modal.style.display = 'none';
    }

    function deleteReservation(reservationId) {
        $.ajax({
            type: "POST",
            url: "/Reservation/DeleteReservation",
            data: { id: reservationId },
            success: function () {
                location.reload();
            },
            error: function () {
                alert("Failed to delete reservation.");
            }
        });
    }


    function toggleDropdown() {
        var dropdownMenu = document.getElementById("dropdownMenu");
        dropdownMenu.style.display = (dropdownMenu.style.display === "none" || dropdownMenu.style.display === "") ? "block" : "none";
    }

    function handleButtonClick(action) {
        toggleDropdown();
        if (action === "sortByType") {
            sortByType();
        } else if (action === "sortByDifficulty") {
            sortByDifficulty();
        }
    }

    $(document).on("click", function (event) {
        if (!$(event.target).closest(".dropdown").length && $("#dropdownMenu").css("display") === "block") {
            toggleDropdown(); 
        }
    });




    function GetClientEmail(idc, reservationId) {
        $.ajax({
            type: "GET",
            url: "/Customer/GetClientEmail",
            data: { id: idc },
            success: function (data) {
                $("#clientEmail_" + reservationId).text(data.email);
            },
            error: function () {
                $("#clientEmail_" + reservationId).text(""); 
            }
        });
    }

    function GetClassName(idcl, reservationId) {
        $.ajax({
            type: "GET",
            url: "/Class/GetClassName",
            data: { id: idcl },
            success: function (data) {
                $("#className_" + reservationId).text(data.name);
            },
            error: function () {
                $("#className_" + reservationId).text(""); 
            }
        });
    }


</script>

