@{
    ViewBag.Title = "Admins";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .admin-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        .dropdown-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .dropdown {
            position: relative;
            display: inline-block;
            margin-bottom: 20px;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #fff;
            width: 250px; 
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
            text-align: left;
            padding: 10px;
            border-radius: 5px;
            color: #000;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-btn {
            display: block;
            margin: 20px auto;
            padding: 15px 30px; 
            border-radius: 30px !important;
            text-align: center;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            font-size: 18px;
            line-height: 1.5;
        }

            .dropdown-btn:hover {
                background-color: #0056b3;
            }

            .dropdown-btn i {
                margin-right: 10px;
            }

        .dropdown-content a {
            display: block;
            padding: 10px;
            color: #007bff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .dropdown-content a:hover {
                background-color: #f1f1f1;
            }

            .dropdown-content a i {
                margin-right: 10px;
            }

        .go-back-btn {
            display: block;
            margin-right: 400px; 
            margin-bottom: 20px; 
            padding: 10px 20px;
            border-radius: 5px !important; 
            background-color: #ccc;
            color: #535353;
            text-decoration: none; 
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease; 
        }

            .go-back-btn:hover {
                background-color: #bbb; 
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="admin-container">
        <h3 style="text-align: center;">Admin Panel</h3>

        <div class="dropdown-container">
            <a href="@Url.Action("Login", "Authenticate")" class="go-back-btn"><i class="fas fa-arrow-left"></i> Go Back</a>

            <div class="dropdown">
                <button class="dropdown-btn"><i class="fas fa-cogs"></i> Manage Options</button>
                <div class="dropdown-content">
                    <a href="@Url.Action("Gyms", "Gym")">
                        <i class="fas fa-dumbbell"></i> Manage Gyms
                    </a>
                    <a href="@Url.Action("Customers", "Customer")">
                        <i class="fas fa-users"></i> Manage Customers
                    </a>
                    <a href="@Url.Action("Coaches", "Coach")">
                        <i class="fas fa-user-tie"></i> Manage Coaches
                    </a>
                    <a href="@Url.Action("Classes", "Class")">
                        <i class="far fa-calendar-alt"></i> Manage Classes
                    </a>
                    <a href="@Url.Action("ClassTypes", "ClassType")">
                        <i class="fas fa-tags"></i> Manage Class Types
                    </a>
                    <a href="@Url.Action("Reservations", "Reservation")">
                        <i class="far fa-calendar-check"></i> Manage Reservations
                    </a>
                    <a href="@Url.Action("Favourites", "Favourite")">
                        <i class="fas fa-heart"></i> Manage Favourites
                    </a>
                    <a href="@Url.Action("GymCards", "GymCard")">
                        <i class="fas fa-id-card"></i> Manage Gym Cards
                    </a>
                    <a href="@Url.Action("Reviews", "Review")">
                        <i class="fas fa-star"></i> Manage Reviews
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
