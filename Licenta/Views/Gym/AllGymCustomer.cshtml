@using Licenta.Models

@{
    ViewBag.Title = "AllGymCustomer";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


<style>

    .container {
        max-width: 1200px;
    }

    .search-container {
        margin-bottom: 10px;
        display: flex;
        justify-content: flex-end; /* Align to the right */
    }

        .search-container input {
            width: 200px; /* Adjust as needed */
            margin-left: 10px;
        }

    .gym-card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        padding: 20px;
    }

        .gym-card h3 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .gym-card p {
            margin: 5px 0;
            font-size: 16px;
        }

        .gym-card span {
            font-size: 18px;
            font-weight: bold;
            color: #007bff;
        }

    .menu-items {
        width: auto;
        height: auto;
        text-align: center;
        margin: 20px auto;
        background-color: #007bff;
        color: #ffffff;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        border-radius: 13px;
        padding: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease;
    }

        .menu-items:hover {
            background-color: #0056b3;
        }



    /* Slide menu styles */
    .slide-menu {
        position: fixed;
        top: 50px;
        left: 0;
        width: 180px;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.9);
        color: #000000;
        padding: 20px;
        box-sizing: border-box;
        transition: transform 0.3s ease-in-out, left 0.3s ease-in-out;
        z-index: 1000;
        transform: translateX(-250px);
    }

        .slide-menu ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .slide-menu ul li {
                margin-bottom: 10px;
                padding-left: 0;
                border-bottom: 1px solid #ffffff;
            }

                .slide-menu ul li:last-child {
                    border-bottom: none;
                }

                .slide-menu ul li a {
                    cursor: pointer;
                    display: block;
                    padding: 10px;
                    border-radius: 15px;
                    color: #ffffff;
                }

        .slide-menu.show {
            transform: translateX(0);
        }

    .menu-toggle {
        position: fixed;
        top: 20px;
        left: 30px;
        cursor: pointer;
        z-index: 1100;
        color: #fff;
        font-size: 24px;
    }

        .menu-toggle i {
            transition: transform 0.3s ease-in-out;
        }

        .menu-toggle.show i {
            transform: rotate(180deg);
        }

    .icon-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

        .icon-container i {
            font-size: 24px;
            cursor: pointer;
            margin-right: 10px;
        }
</style>

<div class="container body-content">
    <div id="statusMessage" style="text-align: center; margin-bottom: 20px;"></div>

    <h2 style="text-align: center; font-size: 32px; padding-top: 30px;">All Gyms</h2>

    <div class="redirect-container" style="text-align: center; margin-bottom: 20px;">
        <i class="fas fa-arrow-left" id="redirectArrow" style="cursor: pointer; font-size: 24px;"></i>
        <span id="goBackText" style="cursor: pointer; font-size: 24px; margin-left: 10px;">Go Back</span>
    </div>


    <!-- Search Bar -->
    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search..." class="form-control">
    </div>

    @if (ViewBag.AllGyms != null && ((List<Gym>)ViewBag.AllGyms).Any())
    {
        <div class="gym-cards">
            @foreach (var gym in (List<Gym>)ViewBag.AllGyms)
            {
                <div class="gym-card">
                    <div class="icon-container">
                        <i class="fas fa-info-circle" onclick="redirectToGymDetails(@gym.idg)"></i>
                        <i class="fas fa-star star" onclick="addToFavorites(this)" data-gym-id="@gym.idg"></i>
                        <i class="fas fa-quote-right" onclick="redirectToReview(@gym.idg)"></i>
                    </div>
                    <h3>@gym.name</h3>
                    <p><strong>Address:</strong> @gym.adress</p>
                    <p><strong>Opening Hours:</strong> @gym.openHour - @gym.closeHour</p>
                    <p><strong>Rating:</strong> @gym.rating</p>
                    <button class="menu-items" onclick="enrollInClass(@gym.idg)">Enroll in Class</button>
                    <button class="menu-items" onclick="createMembership(@gym.idg)">Create Membership</button>
                </div>
            }
        </div>
    }
    else
    {
        <p style="text-align: center; font-size: 20px; color: #555; line-height: 1.5;">No gyms available.</p>
    }

</div>



<script>
    function toggleSlideMenu() {
        var slideMenu = document.getElementById("slideMenu");
        slideMenu.classList.toggle("show");
    }

    function redirectToGymDetails(gymId) {
        window.location.href = "/Gym/GymDetails/" + gymId;
    }

    function redirectToReview(gymId) {
        window.location.href = "/Review/CustomerReview/" + gymId;
    }

    function getCustomerId() {
        var url = window.location.href;
        var customerIdIndex = url.lastIndexOf("/") + 1;
        var customerId = url.substr(customerIdIndex);

        if (!isNaN(customerId) && parseInt(customerId) > 0) {
            return parseInt(customerId);
        } else {
            alert("Please log in to access this feature.");
            window.location.href = "/Account/Login";
        }
    }

    // Add event listener to the arrow icon
    $(document).ready(function () {
        $("#redirectArrow").click(function () {
            var customerId = getCustomerId();
            window.location.href = "/Customer/Main/" + customerId;
        });

        console.log("jQuery loaded successfully!"); // Check if jQuery is loaded
    });

    // Function to show the status message
    function showStatusMessage(message) {
        $('#statusMessage').text(message);
        $('#statusMessage').html(`<span>${message}</span><br/>`);
        $('#statusMessage').fadeIn().delay(2000).fadeOut();
    }


    function addToFavorites(starIcon) {
        window.scrollTo(0, 0);
        var customerId = getCustomerId(); // Fetch the customer ID dynamically
        var gymId = $(starIcon).data('gym-id');

        // Send AJAX request to add gym to favorites
        $.ajax({
            url: '/Customer/AddToFavourite',
            type: 'POST',
            data: { customerId: customerId, gymId: gymId },
            success: function (response) {
                // Handle success response if needed
                // For example, display a success message
                if (response.success) {
                    showStatusMessage('Great choice! 🎉 Gym added to favorites successfully.');
                } else {
                    showStatusMessage('Oops! 😅 Gym is already in favorites.');
                }
            },
            error: function (xhr, status, error) {
                // Handle error response if needed
                console.error('Error adding gym to favorites:', error);
            }
        });
    }

    $(document).ready(function () {
        console.log("jQuery loaded successfully!"); // Check if jQuery is loaded
    });

    // Function to filter gym cards based on search input
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $(".gym-card").each(function () {
                var gymCard = $(this);
                var containsText = false;
                gymCard.find("*").each(function () {
                    if ($(this).text().toLowerCase().indexOf(value) > -1) {
                        containsText = true;
                        return false; // Exit the loop if text is found
                    }
                });
                if (containsText) {
                    gymCard.show();
                } else {
                    gymCard.hide();
                }
            });
        });
    });



    function enrollInClass(gymId) {
        window.location.href = "/Class/CustomerClasses/" + gymId;
    }

    function createMembership(gymId) {
        var customerId = getCustomerId(); // Fetch the customer ID dynamically
        window.location.href = "/Customer/AddGymCard?customerId=" + customerId + "&gymId=" + gymId;
    }



</script>