
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden; 
            background-color: #eff9ff;
            font-family: "Poppins";
        }

        .background {
            position: fixed;
            top: -50vmin;
            left: -50vmin;
            width: 100vmin;
            height: 100vmin;
            border-radius: 47% 53% 61% 39% / 45% 51% 49% 55%;
            background: #65c8ff;
            z-index: -1; 
        }

        .background::after {
            content: "";
            position: fixed;
            right: -50vmin;
            bottom: -55vmin;
            width: 100vmin;
            height: 100vmin;
            border-radius: 47% 53% 61% 39% / 45% 51% 49% 55%;
            background: #143d81;
        }

        .content {
            padding: 20px;
            z-index: 1; 
        }
    </style>
</head>
<body>
    <div class="container body-content">
        <div class="background"></div>

        <div class="content">
            @RenderBody()
            <h1>Welcome to Your Website</h1>
            <p>This is a simple user layout with a beautiful background.</p>
        </div>

        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
