
@model Licenta.Models.ClassType
@{
    ViewBag.Title = "Update Class Type";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>Update Class Type</title>
    <style>
        input {
            width: 190px;
            font-size: 16px;
            height: 28px;
            padding: 2px;
            margin: 3px;
            border: solid;
            border-color: indigo;
            border-radius: 4px;
            border-width: 2px;
            margin-left: 72px;
        }

        form {
            padding: 2px;
        }

        button {
            width: 140px;
            height: 38px;
            color: white;
            background-color: forestgreen;
            border-radius: 6px;
            margin: 5px;
        }

        .buttons {
            margin-top: 25px;
        }
    </style>
</head>
<body>
    <h3>Update Class Type</h3>

    <form id="updateForm" action="@Url.Action("UpdateClassType", "ClassType")" method="post">
        @Html.HiddenFor(model => model.idct)
        <div>
            <label for="type">Type:</label>
            <input type="text" id="type" name="type" value="@Model.type" />
        </div>
        <div>
            <label for="difficulty">Difficulty:</label>
            <input type="number" id="difficulty" name="difficulty" min="1" max="10" value="@Model.difficulty" />
        </div>
        <div class="buttons">
            <button type="submit" value="Update">Update</button>
            <button type="button" onclick="cancelUpdate()">Cancel</button>
        </div>
    </form>

    <script>
        function cancelUpdate() {
            window.location.href = '/ClassType/ClassTypes';
        }
    </script>

</body>
</html>
