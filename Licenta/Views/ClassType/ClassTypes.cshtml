
@model List<Licenta.Models.ClassType>

@{
    ViewBag.Title = "ClassTypes";
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />


<style>
    .btn-transition {
        transition: background-color 0.3s ease;
    }

        .btn-transition:hover {
            background-color: forestgreen;
            color: white;
        }

    .search-container {
        margin-bottom: 10px;
        display: flex;
        justify-content: flex-end;
    }

        .search-container input {
            width: 200px;
            margin-left: 10px;
        }








    .dropdown {
        height: fit-content;
        width: 100px;
        position: absolute;
        display: flex;
        top: 115px; 
        left: 215px; 
        z-index: 1000; 
    }

    .dropdown-toggle {
        color: #333;
        padding: .75rem 2.5rem;
        border: none;
        border-radius: .5rem;
        cursor: pointer;
        width: 150px;
        display: flex;
        align-items: center; 
        justify-content: space-between; 
    }

        .dropdown-toggle span {
            display: flex;
            align-items: center; 
        }

        .dropdown-toggle i {
            margin: 0.3rem; 
        }

    .dropdown-menu {
        position: absolute;
        top: 100%; 
        left: 0;
        border: 1px solid #ccc;
        border-radius: 1rem;
        padding: 0;
        list-style: none;
        display: none;
    }

        .dropdown-menu .menu-item:first-child {
            border-radius: 1rem 1rem 0 0;
        }

        .dropdown-menu .menu-item:last-child {
            border-radius: 0 0 1rem 1rem;
        }

    .menu-items {
        width: 170px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        border: none;
        font-size: 1.1rem;
        cursor: pointer;
        border-radius: 13px !important; 
    }



    .modal-container {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .modal-content {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        padding: 20px;
        text-align: center;
    }

    .button-container {
        display: flex;
        justify-content: space-around;
    }

    .button {
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
    }
        .button:hover {
            transform: scale(1.05); 
            transition: transform 0.3s ease;
        }


    .cancel-button {
        background-color: #ccc;
        color: #535353;
    }

        .cancel-button:hover {
            background-color: #bbb; 
        }

    .delete-button {
        background-color: #e74c3c;
        color: #fff;
    }

        .delete-button:hover {
            background-color: #c0392b; 
        }
</style>


<h2 style="text-align: center;">Admin Panel - Class Types</h2>

<div class="container">

    <div class="dropdown">
        <div class="dropdown-toggle" onclick="toggleDropdown()">
            <span>
                <i class="fas fa-sort"></i> 
                Sort
            </span>
        </div>
        <ul class="dropdown-menu" id="dropdownMenu">
            <li class="menu-items" onclick="handleButtonClick('sortByType')">
                <i class="fas fa-sort-alpha-down"></i> 
                SortByType
            </li>
            <li class="menu-items" onclick="handleButtonClick('sortByDifficulty')">
                <i class="fas fa-sort-numeric-down"></i>
                SortByDifficulty
            </li>
        </ul>
    </div>

    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search..." class="form-control">
    </div>

    <table class="table">
        <tr>
            <th>#</th>
            <th>Type</th>
            <th>Difficulty</th>
            <th>Action</th>
        </tr>
        @foreach (var classType in Model)
        {
            <tr>
                <td>@classType.idct</td>
                <td>@classType.type</td>
                <td>@classType.difficulty</td>
                <td>
                    <button class="btn btn-danger" onclick="showDeleteConfirmation(@classType.idct)">Delete</button>
                    <a href="/ClassType/UpdateClassTypeView?id=@classType.idct" class="btn btn-primary">Update</a>
                </td>
            </tr>
        }
    </table>

    <div class="row">
        <div class="col-md-6">
            <a href="/ClassType/AddClassType" class="btn btn-secondary btn-transition">Add a new class type</a>
        </div>
        <div class="col-md-6 text-md-right">
            <a href="/Admin/Admins" class="btn btn-secondary btn-transition">Go Back</a>
        </div>
    </div>
</div>

<div id="deleteModal" class="modal-container">
    <div class="modal-content">
        <h2>Delete Confirmation</h2>
        <p class="confirmation-message">
            Are you sure you want to delete this item?
        </p>
        <div class="button-container">
            <button id="cancelDeleteBtn" class="button cancel-button">
                Cancel
            </button>
            <button id="confirmDeleteBtn" class="button delete-button">
                Delete
            </button>
        </div>
    </div>
</div>

<script>
    function sortByType() {
        var rows = $("table tbody tr").get();

        rows.sort(function (rowA, rowB) {
            var typeA = $(rowA).find("td:eq(1)").text().toUpperCase(); 
            var typeB = $(rowB).find("td:eq(1)").text().toUpperCase(); 

            return typeA.localeCompare(typeB);
        });

        $.each(rows, function (index, row) {
            $("table tbody").append(row);
        });
    }

    function sortByDifficulty() {
        var rows = $("table tbody tr").get();

        rows.sort(function (rowA, rowB) {
            var difficultyA = parseInt($(rowA).find("td:eq(2)").text());
            var difficultyB = parseInt($(rowB).find("td:eq(2)").text()); 

            return difficultyA - difficultyB; 
        });

        $.each(rows, function (index, row) {
            $("table tbody").append(row);
        });
    }

    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("table tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

    function showDeleteConfirmation(classTypeid) {
        const modal = document.getElementById('deleteModal');
        modal.style.display = 'flex';
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        confirmDeleteBtn.onclick = function () {
            deleteClassType(classTypeid);
            hideModal('deleteModal');
        }
        const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
        cancelDeleteBtn.onclick = function () {
            hideModal('deleteModal');
        }
    }

    function hideModal(modalId) {
        const modal = document.getElementById(modalId);
        modal.style.display = 'none';
    }

    function deleteClassType(classTypeid) {
        $.ajax({
            type: "POST",
            url: "/ClassType/DeleteClassType",
            data: { id: classTypeid },
            success: function () {
                location.reload();
            }
        });
    }


    function toggleDropdown() {
        var dropdownMenu = document.getElementById("dropdownMenu");
        dropdownMenu.style.display = (dropdownMenu.style.display === "none" || dropdownMenu.style.display === "") ? "block" : "none";
    }

    function handleButtonClick(action) {
        toggleDropdown();
        if (action === "sortByType") {
            sortByType();
        } else if (action === "sortByDifficulty") {
            sortByDifficulty();
        }
    }

    $(document).on("click", function (event) {
        if (!$(event.target).closest(".dropdown").length && $("#dropdownMenu").css("display") === "block") {
            toggleDropdown(); 
        }
    });

</script>
