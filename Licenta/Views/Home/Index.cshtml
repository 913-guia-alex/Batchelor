<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            background-color: #eff9ff;
            font-family: "Poppins", sans-serif;
            margin: 0;
            padding: 0;
        }

        .background {
            position: fixed;
            top: -50vmin;
            left: -50vmin;
            width: 100vmin;
            height: 100vmin;
            border-radius: 47% 53% 61% 39% / 45% 51% 49% 55%;
            background: #65c8ff;
            z-index: -1;
        }

            .background::after {
                content: "";
                position: fixed;
                right: -50vmin;
                bottom: -55vmin;
                width: 100vmin;
                height: 100vmin;
                border-radius: 47% 53% 61% 39% / 45% 51% 49% 55%;
                background: #143d81;
            }

        .container {
            text-align: center;
            z-index: 1;
            padding-top: 70px; 
        }

        .navbar {
            width: 100%;
            background-color: #343a40;
            position: fixed;
            top: 0;
            z-index: 2;
        }

            .navbar .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 1rem;
            }

        .navbar-brand, .nav-link {
            color: white;
            text-decoration: none;
            font-size: 18px;
            line-height: 10px; 
        }

        .nav-link {
            margin: 0 10px;
        }

        .buttons {
            margin-top: 20px;
        }

            .buttons button {
                padding: 10px 20px;
                margin: 10px;
                font-size: 18px;
                cursor: pointer;
                border: none;
                border-radius: 5px;
                background-color: #007bff;
                color: white;
                transition: background-color 0.3s;
            }

                .buttons button:hover {
                    background-color: #0056b3;
                }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
            padding: 10px;
            background-color: #eff9ff;
            z-index: 1;
        }
    </style>
</head>
<body>
    <div class="background"></div>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("TopGym", "Login", "Authenticate", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1>Welcome to TopGym!</h1>
        <p>Please log in or sign up to start using the app.</p>
        <div class="buttons">
            <button id="loginBtn">Login</button>
            <button id="signupUserBtn">Sign Up User</button>
            <button id="signupGymBtn">Sign Up Gym</button>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        document.getElementById('loginBtn').addEventListener('click', function () {
            window.location.href = '/Authenticate/Login';
        });

        document.getElementById('signupUserBtn').addEventListener('click', function () {
            window.location.href = '/Register/RegisterCustomer';
        });

        document.getElementById('signupGymBtn').addEventListener('click', function () {
            window.location.href = '/Register/RegisterGym';
        });
    </script>
</body>
</html>
