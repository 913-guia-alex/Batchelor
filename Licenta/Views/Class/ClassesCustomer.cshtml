@model List<Licenta.Models.Reservation>

@{
    ViewBag.Title = "ClassesCustomer";
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<style>
    .container {
        max-width: 1000px;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #dee2e6;
    }

    th {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    td {
        background-color: #ffffff;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .no-reservations {
        text-align: center;
        font-style: italic;
        color: #777;
        margin-top: 20px;
    }

    .modal-container {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .modal-content {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        padding: 20px;
        text-align: center;
    }

    .button-container {
        display: flex;
        justify-content: space-around;
    }

    .button {
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .button:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }

    .cancel-button {
        background-color: #ccc;
        color: #535353;
    }

        .cancel-button:hover {
            background-color: #bbb; 
        }

    .delete-button {
        background-color: #e74c3c;
        color: #fff;
    }

        .delete-button:hover {
            background-color: #c0392b;
        }
</style>

<div class="container">
    <h2>Your Class Reservations</h2>

    @if (Model.Count == 0)
    {
        <p class="no-reservations">Hey there! Looks like you don't have any reservations made for now. No worries, let's fix that!</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Reservation ID</th>
                    <th>Your Email</th>
                    <th>Class Name</th>
                    <th>Class Date</th>
                    <th>Class Time</th>
                    <th>Reservation Date</th>
                    <th>Reservation Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.idr</td>
                        <td>@reservation.CustomerEmail</td>
                        <td>@reservation.ClassName</td>
                        <td>@reservation.ClassDate.ToShortDateString()</td>
                        <td>@reservation.ClassTime.ToString(@"hh\:mm")</td>
                        <td>@reservation.Date.ToShortDateString()</td>
                        <td>@reservation.Time.ToString(@"hh\:mm")</td>
                        <td>
                            <i class="fas fa-trash-alt" style="cursor:pointer; color:red;" onclick="showDeleteConfirmation(@reservation.idr)"></i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div id="deleteModal" class="modal-container">
    <div class="modal-content">
        <h2>Delete Confirmation</h2>
        <p class="confirmation-message">
            Are you sure you want to delete this reservation?
        </p>
        <div class="button-container">
            <button id="cancelDeleteBtn" class="button cancel-button">
                Cancel
            </button>
            <button id="confirmDeleteBtn" class="button delete-button">
                Delete
            </button>
        </div>
    </div>
</div>

<script>
    function showDeleteConfirmation(reservationId) {
        const modal = document.getElementById('deleteModal');
        modal.style.display = 'flex';
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        confirmDeleteBtn.onclick = function () {
            deleteReservation(reservationId);
            hideModal('deleteModal');
        }
        const cancelDeleteBtn = document.getElementById('cancelDeleteBtn');
        cancelDeleteBtn.onclick = function () {
            hideModal('deleteModal');
        }
    }

    function hideModal(modalId) {
        const modal = document.getElementById(modalId);
        modal.style.display = 'none';
    }

    function deleteReservation(reservationId) {
        $.ajax({
            type: "POST",
            url: "/Reservation/DeleteReservation",
            data: { id: reservationId },
            success: function () {
                location.reload();
            },
            error: function () {
                alert("Failed to delete reservation.");
            }
        });
    }
</script>
