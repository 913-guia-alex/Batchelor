@model Licenta.Models.Review

@{
    ViewBag.Title = "CustomerReview";
}

<h2>Leave a Review for @ViewBag.GymName</h2>

@using (Html.BeginForm("SaveAddedReview", "Review", FormMethod.Post))
{
    @Html.HiddenFor(model => model.idg) <!-- Hidden field for Gym ID -->

    <div class="form-group">
        <label for="email">Your Email:</label>
        @Html.TextBoxFor(model => model.customerEmail, new { @class = "form-control" }) <!-- Email input -->
        @Html.ValidationMessageFor(model => model.customerEmail, "", new { @class = "text-danger" }) <!-- Validation message -->
    </div>

    <div class="form-group">
        <label for="rating">Rating:</label>
        @Html.DropDownListFor(model => model.rating, Enumerable.Range(1, 5).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }), "Select", new { @class = "form-control" }) <!-- Rating dropdown -->
        @Html.ValidationMessageFor(model => model.rating, "", new { @class = "text-danger" }) <!-- Validation message -->
    </div>

    <div class="form-group">
        <label for="description">Review Description:</label>
        <div class="position-relative">
            @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = 6, maxlength = 500, id = "description" }) <!-- Review description input -->
            <span class="text-muted position-absolute bottom-0 end-0" id="charCount">0/500</span>
        </div>
        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" }) <!-- Validation message -->
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>

    <script>
        $(document).ready(function () {
            var maxChars = 500;
            var textArea = $('#description');
            var charCount = $('#charCount');

            textArea.on('input', function () {
                var remainingChars = maxChars - textArea.val().length;
                charCount.text(textArea.val().length + '/' + maxChars);
                if (remainingChars < 0) {
                    charCount.addClass('text-danger'); // Change color to red if exceeding limit
                } else {
                    charCount.removeClass('text-danger'); // Remove red color if within limit
                }
            });
        });
    </script>
}
